<!DOCTYPE html>
<html>
  <head>
    <title>MyBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="p-3 bg-dark text-white">
      <div class="container">
        <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
          <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
            <li><%= link_to 'Posts', root_path, class: 'nav-link px-2 text-white' %></li>
            <li><%= link_to '|', root_path, class: 'nav-link px-2 text-white' %></li>
            <% if user_signed_in? %>
              <li><%= link_to 'Log out', destroy_user_session_path, class: 'nav-link px-2 text-white',
               method: :delete %></li>
            <% else %>
              <li><%= link_to 'Log_in', new_user_session_path, class: 'nav-link px-2 text-white' %></li>
              <li><%= link_to 'Registration',
                new_user_registration_path, class: 'nav-link px-2 text-white' %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
